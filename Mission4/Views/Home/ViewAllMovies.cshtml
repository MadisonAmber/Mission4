@{
    ViewData["Title"] = "View All Movies";
}

@model List<Mission4.Models.Movie>;

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Category</th>
            <th scope="col">Title</th>
            <th scope="col">Year</th>
            <th scope="col">Director</th>
            <th scope="col">Rating</th>
            <th scope="col">Edited</th>
            <th scope="col">LentTo</th>
            <th scope="col">Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Id</td>
            <td>@movie.Category</td>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@movie.Edited</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>

            <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@movie.Id">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@movie.Id">Delete</a></td>
        </tr>
        }
    </tbody>
</table>
